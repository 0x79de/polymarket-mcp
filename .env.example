# Polymarket MCP Server Configuration
# Copy this file to .env and customize the values as needed

# =============================================================================
# Server Configuration
# =============================================================================

# Server name displayed in logs and info
POLYMARKET_SERVER_NAME="Polymarket MCP Server"

# Maximum number of concurrent connections (optional)
POLYMARKET_SERVER_MAX_CONNECTIONS=100

# Server timeout in seconds
POLYMARKET_SERVER_TIMEOUT=30

# =============================================================================
# API Configuration
# =============================================================================

# Polymarket API base URL
POLYMARKET_API_BASE_URL="https://gamma-api.polymarket.com"

# API key for authenticated requests (optional - not required for read-only access)
# POLYMARKET_API_KEY="your_api_key_here"

# Trading API Credentials (for advanced trading operations)
# POLYMARKET_SECRET="your_secret_here"
# POLYMARKET_PASSPHRASE="your_passphrase_here"

# Wallet Credentials (for blockchain interactions)
# WALLET_PUBLIC_KEY="0x_your_public_key_here"
# WALLET_PRIVATE_KEY="your_private_key_here"

# Alternative base URL configuration
# POLYMARKET_BASE_URL="https://gamma-api.polymarket.com"

# API request timeout in seconds
POLYMARKET_API_TIMEOUT=30

# Maximum number of retry attempts for failed requests
POLYMARKET_API_MAX_RETRIES=3

# Delay between retry attempts in milliseconds
POLYMARKET_API_RETRY_DELAY=100

# Rate limit - maximum requests per second (optional)
POLYMARKET_API_RATE_LIMIT=10

# =============================================================================
# Cache Configuration
# =============================================================================

# Enable/disable caching
POLYMARKET_CACHE_ENABLED=true

# Cache time-to-live in seconds
POLYMARKET_CACHE_TTL=60

# Maximum number of cache entries
POLYMARKET_CACHE_MAX_ENTRIES=1000

# Resource cache TTL in seconds (for MCP resources)
POLYMARKET_RESOURCE_CACHE_TTL=300

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: trace, debug, info, warn, error
POLYMARKET_LOG_LEVEL=info

# Alternative: Use standard Rust logging environment variable
# RUST_LOG=info

# Log format: pretty, json, compact
POLYMARKET_LOG_FORMAT=pretty

# Enable colored output
POLYMARKET_LOG_COLORS=true

# Write logs to file
POLYMARKET_LOG_TO_FILE=false

# Log file path (required if POLYMARKET_LOG_TO_FILE=true)
# POLYMARKET_LOG_FILE_PATH="/var/log/polymarket-mcp.log"

# =============================================================================
# Examples for different environments
# =============================================================================

# Development environment
# POLYMARKET_LOG_LEVEL=debug
# POLYMARKET_CACHE_TTL=30
# POLYMARKET_API_MAX_RETRIES=1

# Production environment
# POLYMARKET_LOG_LEVEL=warn
# POLYMARKET_LOG_TO_FILE=true
# POLYMARKET_LOG_FILE_PATH="/var/log/polymarket-mcp.log"
# POLYMARKET_CACHE_TTL=300
# POLYMARKET_SERVER_MAX_CONNECTIONS=200

# Testing environment
# POLYMARKET_LOG_LEVEL=trace
# POLYMARKET_CACHE_ENABLED=false
# POLYMARKET_API_TIMEOUT=5